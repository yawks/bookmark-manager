<?xml version="1.0" encoding="UTF-8"?>
<database>
    <table name="bookmarksmanager_collections">
        <field name="id" type="integer" notnull="true" length="4" autoincrement="true"/>
        <field name="user_id" type="string" notnull="true" length="64"/>
        <field name="name" type="string" notnull="true" length="255"/>
        <field name="icon" type="string" notnull="false" length="255"/>
        <field name="parent_id" type="integer" notnull="false" length="4"/>
        <primary-key>
            <field>id</field>
        </primary-key>
        <index name="bkmgr_collections_user_id_idx">
            <field>user_id</field>
        </index>
    </table>
    <table name="bookmarksmanager_tags">
        <field name="id" type="integer" notnull="true" length="4" autoincrement="true"/>
        <field name="user_id" type="string" notnull="true" length="64"/>
        <field name="name" type="string" notnull="true" length="255"/>
        <primary-key>
            <field>id</field>
        </primary-key>
        <index name="bkmgr_tags_user_id_idx">
            <field>user_id</field>
        </index>
    </table>
    <table name="bookmarksmanager_bookmarks">
        <field name="id" type="integer" notnull="true" length="4" autoincrement="true"/>
        <field name="user_id" type="string" notnull="true" length="64"/>
        <field name="url" type="string" notnull="true" length="4096"/>
        <field name="title" type="string" notnull="true" length="255"/>
        <field name="description" type="text" notnull="false"/>
        <field name="screenshot" type="string" notnull="false" length="255"/>
        <field name="collection_id" type="integer" notnull="false" length="4"/>
        <primary-key>
            <field>id</field>
        </primary-key>
        <index name="bkmgr_bookmarks_user_id_idx">
            <field>user_id</field>
        </index>
    </table>
    <table name="bookmarksmanager_bookmarks_tags">
        <field name="bookmark_id" type="integer" notnull="true" length="4"/>
        <field name="tag_id" type="integer" notnull="true" length="4"/>
        <primary-key>
            <field>bookmark_id</field>
            <field>tag_id</field>
        </primary-key>
        <foreign-key>
            <field>bookmark_id</field>
            <foreign-table>bookmarksmanager_bookmarks</foreign-table>
            <foreign-field>id</foreign-field>
            <on-delete>cascade</on-delete>
        </foreign-key>
        <foreign-key>
            <field>tag_id</field>
            <foreign-table>bookmarksmanager_tags</foreign-table>
            <foreign-field>id</foreign-field>
            <on-delete>cascade</on-delete>
        </foreign-key>
    </table>
</database>